{
  "manifest_version": 3,
  "name": "Block Riot",
  "version": "1.1",
  "description": "Block everything about Riot Games.",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*.google.com/*", "https://*.duckduckgo.com/*"],
      "js": ["main.js"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{6063e576-1ad9-4615-8e7c-8cb2eaa6d4ee}",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}
